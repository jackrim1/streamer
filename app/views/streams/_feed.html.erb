<div class="column is-half">
	<article class="media box">
		<figure class="media-left">
			<p class="image is-64x64">
				<img src="https://bulma.io/images/placeholders/64x64.png">
			</p>
		</figure>
		<div class="media-content">
			<%= render 'form' %>
		</div>
	</article>

	


	<% @streams.each do |stream| %>
	<div class="box">
		<article class="media">
			<div class="media-left">
				<figure class="image is-64x64">
					<img src="https://bulma.io/images/placeholders/64x64.png">
				</figure>
			</div>
			<div class="media-content">
				<div class="content">
					<strong>Jack Riminton</strong></br>
					<small>Product Manager Choice Apps</small></br>
					<p><%= stream.stream %></p>
				</div>
				<nav class="level">
					<div class="level-left is-mobile">
						<%= link_to stream, class: "level-item" do %>
							<span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
						<% end %>
						<%= link_to edit_stream_path(stream), class: "level-item" do %>
							<span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
						<% end %>
						<%= link_to stream, method: :delete, data: { confirm: "Are you sure you want to delete this Stream?"} do %>
							<span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
						<% end %>
					</div>
				</nav>
			</div>
		
		</article>
		</div>
	<% end %>

</div>














