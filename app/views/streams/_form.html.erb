
<%= simple_form_for(@stream) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<div class="field">
	<div class="control">
	    <%= f.input :stream, label: "Stream something helpful!", input_html: { class: "textarea"}, wrapper: false, label_html: {class: "label"}, placeholder: "Think about what people would like to know e.g. #ThisWeek #Announcement #SmallWin..." %>
	  </div>

	  </div>
	  	<span class="icon"><i class="fa fa-image is-pulled-left" aria-hidden="true"></i></span>
	  	<small>Upload Image</small>
	  	
	    <%= f.button :submit, class: "button is-info is-pulled-right" %>
	    <span class="picture">
	    	<%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
	    </span>
<% end %>













